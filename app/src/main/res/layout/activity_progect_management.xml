<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/activity_toolbar_normal_title"/>

    <!--Logo-->
    <ImageView
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/pro_manage_banner">
    </ImageView>


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_pro_manage_import"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_pro_import"
                android:layout_width="68dp"
                android:layout_height="69dp"
                android:scaleType="centerCrop"
                android:src="@drawable/pro_manage_import" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#64677A"
                android:text="档案导入" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_pro_manage_download"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_pro_download"
                android:scaleType="centerCrop"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/pro_manage_download"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#64677A"
                android:text="档案下载" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_pro_manage_selfchecking"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_pro_selfcheck"
                android:scaleType="centerCrop"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/pro_manage_selfchecking"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#64677A"
                android:text="设备自检" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>