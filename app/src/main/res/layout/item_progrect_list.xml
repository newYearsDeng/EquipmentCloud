<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_left_item"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/color_already" />

    <LinearLayout
        android:background="@color/white"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:paddingLeft="18dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_progrect_name"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:maxLines="1"
            tools:text="麦希设备云平台"
            />
        <TextView
            android:id="@+id/tv_progrect_founder"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:textColor="@color/color_hide"
            android:textSize="13sp"
            android:maxLines="1"
            tools:text="创建人：xxx"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:paddingRight="18dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_progrect_time"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_hide"
            android:textSize="13sp"
            android:maxLines="1"
            tools:text="2019/01/02"/>
    </LinearLayout>

</LinearLayout>